---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero.astro';
import ScrollProcess from '../components/ScrollProcess.astro';
import ProblemStatement from '../components/ProblemStatement.astro';
import SolutionWorkflow from '../components/SolutionWorkflow.astro';
import CTA from '../components/CTA.astro';
---

<Layout>
	<main class="landing">
		<Hero />

		<ScrollProcess />
		<ProblemStatement />
		<SolutionWorkflow />

		<CTA />
	</main>
</Layout>

<style>
	.landing {
		background-color: #111111;
		color: #ffffff;
		font-family: 'Aeonik', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
		position: relative;
		min-height: 100vh;
	}

	/* Film grain texture */
	.landing::before {
		content: '';
		position: fixed;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		background-image: 
			repeating-linear-gradient(0deg, rgba(227,168,87,0.03) 0px, transparent 1px, transparent 2px, rgba(227,168,87,0.03) 3px),
			repeating-linear-gradient(90deg, rgba(227,168,87,0.03) 0px, transparent 1px, transparent 2px, rgba(227,168,87,0.03) 3px);
		pointer-events: none;
		z-index: 1;
	}

	.landing > * {
		position: relative;
		z-index: 2;
	}

	.container {
		max-width: 1200px;
		margin: 0 auto;
		padding: 0 24px;
	}


</style>
