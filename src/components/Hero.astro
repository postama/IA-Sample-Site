<section class="hero-section">
	<div class="container">
		<div class="hero-content">
			<h1 class="company-name">
				<span class="name-line">Industrial</span>
				<span class="name-line">Arts</span>
			</h1>
			<p class="tagline">
                <span class="tagline-line">The system of action </span>
                <span class="tagline-line">for supply chains</span>
            </p>
		</div>
	</div>
</section>

<style>
	.hero-section {
		background-color: #E3A857;
		color: #111111;
		border-bottom: 1px solid #E3A857;
		padding: 80px 0;
	}

	.container {
		max-width: 1200px;
		margin: 0 auto;
		padding: 0 24px;
	}

	.hero-content {
		text-align: center;
	}

	.company-name {
		font-size: 120px;
		font-weight: 900;
		letter-spacing: -0.02em;
		margin: 0 0 24px 0;
		line-height: 1;
		font-family: 'Aeonik', sans-serif;
		display: flex;
		flex-direction: column;
		align-items: center;
	}

	.name-line {
		display: block;
	}

	.tagline {
		font-size: 48px;
		font-weight: 500;
		letter-spacing: -0.04em;
		margin: 0;
		font-family: 'Aeonik', sans-serif;
        display: flex;
        flex-direction: column;
        align-items: center;
	}

    .tagline-line {
        display: block;
        line-height: 1.2;
    }

	/* Responsive Design */
	@media screen and (max-width: 768px) {
		.hero-section {
			padding: 48px 0;
		}

		.company-name {
			font-size: 64px;
			margin: 0 0 16px 0;
		}

		.tagline {
			font-size: 20px;
		}
	}
</style>

