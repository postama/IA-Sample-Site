---
/* ScrollProcess.astro */
---

<section class="relative w-full bg-manila text-ink font-sans overflow-clip">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Archivo:wght@400;700;900&family=JetBrains+Mono:wght@400;700&display=swap" rel="stylesheet">
  
    <div 
      class="absolute inset-0 z-10 opacity-[0.12] pointer-events-none"
      style="background-image: url('data:image/svg+xml;base64,');"
    ></div>
  
    <div class="h-[400vh] relative z-20" id="industrial-track">
      <div class="sticky top-0 h-screen w-full flex items-center justify-center border-b border-ink">
        
        <div class="w-[90%] max-w-[1200px] h-[80vh] relative grid border border-ink bg-manila
                    grid-cols-[40px_1fr] grid-rows-[50px_1fr_1fr_60px]
                    md:grid-cols-[80px_1fr_1fr] md:grid-rows-[60px_1fr_100px]">
          
          <div class="col-span-full row-start-1 flex justify-between items-center px-4 bg-ink text-manila">
            <span class="font-mono text-xs md:text-sm">SYS.MONITOR.V2</span>
            <span class="font-mono text-xs md:text-sm">STATUS: ACTIVE</span>
          </div>
  
          <div class="col-start-1 row-start-2 row-end-5 md:row-end-3 flex flex-col justify-between items-center py-4 border-r border-ink md:border-b">
            <span class="vertical-text">REF-4920</span>
            <span class="vertical-text">INPUT STREAM</span>
            <span class="vertical-text">// 001</span>
          </div>
  
          <div class="col-start-2 row-start-2 flex flex-col justify-center items-start p-6 overflow-hidden border-b border-ink md:border-r">
            
            <div class="message-group absolute opacity-0 translate-y-5 transition-all duration-[600ms] ease-[cubic-bezier(0.22,1,0.36,1)] [&.active]:opacity-100 [&.active]:translate-y-0" data-step="0">
              <span class="font-mono text-xs uppercase tracking-wider opacity-80 mb-2 block">FIG 01. DATABASE</span>
              <h2 class="text-3xl md:text-5xl font-black uppercase leading-[0.9] tracking-tight mb-4">ERP tracks<br>the order.</h2>
            </div>

            <div class="message-group absolute opacity-0 translate-y-5 transition-all duration-[600ms] ease-[cubic-bezier(0.22,1,0.36,1)] [&.active]:opacity-100 [&.active]:translate-y-0" data-step="1">
              <span class="font-mono text-xs uppercase tracking-wider opacity-80 mb-2 block">FIG 02. BLUEPRINT</span>
              <h2 class="text-3xl md:text-5xl font-black uppercase leading-[0.9] tracking-tight mb-4">PLM tracks<br>the design.</h2>
            </div>

            <div class="message-group absolute opacity-0 translate-y-5 transition-all duration-[600ms] ease-[cubic-bezier(0.22,1,0.36,1)] [&.active]:opacity-100 [&.active]:translate-y-0" data-step="2">
              <span class="font-mono text-xs uppercase tracking-wider opacity-80 mb-2 block">FIG 03. LOGISTICS</span>
              <h2 class="text-3xl md:text-5xl font-black uppercase leading-[0.9] tracking-tight mb-4">SCM tracks<br>the shipment.</h2>
            </div>

          </div>
  
          <div class="col-start-2 md:col-start-3 row-start-3 md:row-start-2 relative flex justify-center items-center border-b border-ink md:border-b-0
                      bg-[image:linear-gradient(var(--ink-black)_1px,transparent_1px),linear-gradient(90deg,var(--ink-black)_1px,transparent_1px)] bg-[size:40px_40px] bg-center">
            
            <div class="absolute inset-0 bg-manila opacity-90"></div>

            <div class="icon-group relative z-10 w-32 h-32 md:w-44 md:h-44 hidden [&.active]:block animate-flicker" data-step="0">
               <svg class="w-full h-full stroke-ink stroke-[1.5] fill-none" viewBox="0 0 24 24"><path d="M16 4h2a2 2 0 0 1 2 2v14a2 2 0 0 1-2 2H6a2 2 0 0 1-2-2V6a2 2 0 0 1 2-2h2"></path><rect x="8" y="2" width="8" height="4" rx="1" ry="1"></rect><path d="M9 14h6"></path><path d="M9 18h6"></path><path d="M9 10h6"></path></svg>
            </div>
            <div class="icon-group relative z-10 w-32 h-32 md:w-44 md:h-44 hidden [&.active]:block animate-flicker" data-step="1">
              <svg class="w-full h-full stroke-ink stroke-[1.5] fill-none" viewBox="0 0 24 24"><path d="M21.5 21.5l-6-6"></path><path d="M2 22h20"></path><path d="M8 2v4"></path><path d="M16 2v4"></path><rect x="4" y="6" width="16" height="12" rx="2"></rect><circle cx="12" cy="12" r="3"></circle></svg>
            </div>
            <div class="icon-group relative z-10 w-32 h-32 md:w-44 md:h-44 hidden [&.active]:block animate-flicker" data-step="2">
              <svg class="w-full h-full stroke-ink stroke-[1.5] fill-none" viewBox="0 0 24 24"><path d="M21 16V8a2 2 0 0 0-1-1.73l-7-4a2 2 0 0 0-2 0l-7 4A2 2 0 0 0 3 8v8a2 2 0 0 0 1 1.73l7 4a2 2 0 0 0 2 0l7-4A2 2 0 0 0 21 16z"></path><polyline points="3.27 6.96 12 12.01 20.73 6.96"></polyline><line x1="12" y1="22.08" x2="12" y2="12"></line></svg>
            </div>
          </div>
  
          <div class="absolute inset-0 z-20 col-start-2 md:col-start-2 col-end-[-1] row-start-2 row-end-4 md:row-end-3
                      flex flex-col justify-center items-start p-6 md:p-12
                      bg-ink text-manila
                      [clip-path:polygon(0_0,0_0,0_100%,0_100%)] transition-[clip-path] duration-700 ease-[cubic-bezier(0.65,0,0.35,1)]
                      [&.active]:[clip-path:polygon(0_0,100%_0,100%_100%,0_100%)]" 
               id="final-slide">
              <span class="font-mono text-xs uppercase tracking-wider opacity-60 mb-2">FIG 04. INTEGRATION COMPLETE</span>
              <h2 class="text-3xl md:text-5xl font-black uppercase leading-[0.9] tracking-tight mb-8 text-manila">We fix the<br>chaos in between.</h2>
              <div>
                <a href="#demo" class="inline-block border border-manila text-manila px-6 py-3 font-mono text-xs uppercase hover:bg-manila hover:text-ink transition-colors duration-200">INITIATE_DEMO ></a>
              </div>
          </div>
  
          <div class="col-start-2 md:col-start-2 col-end-[-1] row-start-4 md:row-start-3 flex items-center justify-between px-6">
            <span class="font-mono text-xs uppercase tracking-wider opacity-80">SYSTEM CHECK: <span class="progress-display">0%</span></span>
            <span class="font-mono text-xs uppercase tracking-wider opacity-80">MODE: AUTO</span>
          </div>
  
        </div>
      </div>
    </div>
</section>
  
<style>
  /* Utility for vertical text, difficult to do purely with Tailwind standard utilities */
  .vertical-text {
    writing-mode: vertical-rl;
    text-orientation: mixed;
    transform: rotate(180deg);
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.7rem;
    letter-spacing: 2px;
  }

  /* Keyframe for the flickering icon effect */
  @keyframes flickerIn {
      0% { opacity: 0; transform: scale(0.95); }
      50% { opacity: 1; }
      60% { opacity: 0; }
      100% { opacity: 1; transform: scale(1); }
  }
  .animate-flicker {
    animation: flickerIn 0.3s forwards;
  }
</style>
  
<script>
  function initIndustrialScroll() {
    const track = document.getElementById('industrial-track');
    if (!track) return;

    const progressDisplay = track.querySelector('.progress-display');
    const finalSlide = track.querySelector('#final-slide');
    const messages = Array.from(track.querySelectorAll('.message-group'));
    const icons = Array.from(track.querySelectorAll('.icon-group'));

    function updateScroll() {
      if (!track) return;
      const rect = track.getBoundingClientRect();
      const viewportHeight = window.innerHeight;

      // Logic to determine scroll percentage within the track
      const distanceScrolled = Math.max(0, -rect.top); 
      const maxScroll = Math.max(1, rect.height - viewportHeight); 
      let progress = distanceScrolled / maxScroll;
      progress = Math.max(0, Math.min(progress, 1));
      
      if(progressDisplay) progressDisplay.textContent = Math.floor(progress * 100) + '%';

      // Reset states
      messages.forEach(el => el.classList.remove('active'));
      icons.forEach(el => el.classList.remove('active'));
      if(finalSlide) finalSlide.classList.remove('active');

      // Step Logic
      if (progress < 0.25) {
        if(messages[0]) messages[0].classList.add('active');
        if(icons[0]) icons[0].classList.add('active');
      } else if (progress < 0.50) {
        if(messages[1]) messages[1].classList.add('active');
        if(icons[1]) icons[1].classList.add('active');
      } else if (progress < 0.75) {
        if(messages[2]) messages[2].classList.add('active');
        if(icons[2]) icons[2].classList.add('active');
      } else {
        if(finalSlide) finalSlide.classList.add('active');
      }
    }

    window.addEventListener('scroll', updateScroll);
    updateScroll();
  }

  initIndustrialScroll();
  document.addEventListener('astro:page-load', initIndustrialScroll);
</script>